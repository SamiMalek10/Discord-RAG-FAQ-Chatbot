# Discord RAG FAQ Chatbot - Environment Variables
# Copy this file to .env and fill in your values

# ======================
# EMBEDDING CONFIGURATION
# ======================
# Options: "local" or "openai"
EMBEDDING_PROVIDER=local

# Local embedding model (sentence-transformers)
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# OpenAI Embeddings (if using cloud)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ======================
# LLM CONFIGURATION
# ======================
# Options: "ollama", "openai", "gemini", "mistral"
LLM_PROVIDER=ollama

# Ollama (Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# OpenAI LLM (if using cloud)
OPENAI_LLM_MODEL=gpt-3.5-turbo

# Google Gemini (if using cloud)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash

# Mistral AI (Cloud) - Recommended for FAQ chatbots
MISTRAL_API_KEY=your_mistral_api_key_here
# Available models:
# - mistral-small-latest: Fast, efficient (recommended for FAQ)
# - mistral-medium-latest: Balanced performance  
# - mistral-large-latest: Most capable
MISTRAL_MODEL=mistral-small-latest

# ======================
# VECTOR STORE CONFIGURATION
# ======================
# Options: "faiss" (local) or "mongodb" (production)
VECTOR_STORE_PROVIDER=faiss

# MongoDB Atlas (Production)
MONGODB_URI=mongodb+srv://user:password@cluster0.znzk9zt.mongodb.net/?appName=Cluster0
MONGODB_DATABASE=rag_chatbot
MONGODB_COLLECTION=knowledge_base
MONGODB_VECTOR_INDEX=vector_index

# FAISS (Local Development)
FAISS_INDEX_PATH=./data/faiss_index

# ======================
# RAG CONFIGURATION
# ======================
# Chunking settings
CHUNK_SIZE=400
CHUNK_OVERLAP=50

# Retrieval settings - Tuned for better coverage
TOP_K_RESULTS=10
# IMPORTANT: Lower threshold (0.2-0.4) for sentence-transformers (MiniLM)
# Higher threshold (0.7-0.8) for OpenAI embeddings
SIMILARITY_THRESHOLD=0.25

# Context window management
MAX_CONTEXT_LENGTH=6000

# ======================
# DISCORD BOT CONFIGURATION
# ======================
# Get your bot token from: https://discord.com/developers/applications
# See demo_phase3.py for setup instructions
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Bot settings
DISCORD_COMMAND_PREFIX=!
DISCORD_RATE_LIMIT_SECONDS=3

# ======================
# LOGGING
# ======================
LOG_LEVEL=INFO
